<%= link_to "Start", '/' %>

<div class="col-md-12 text-center">
  <%= render 'shared/search' %>
</div>

<ul data-search-country-target="country">
  <% @categories.each do |category|%>
    <li><%= link_to category.name, category_path(category, country: params[:country]) %></li>
  <% end %>
</ul>

<div class="row">
  <%= render 'categorycard', icon: '🫶', title: 'Date' %>
  <%= render 'categorycard', icon: '🕺', title: 'Events' %>
  <%= render 'categorycard', icon: '🤝', title: 'Buy & Sell' %>
  <%= render 'categorycard', icon: '🥡', title: 'Food Delivery' %>
  <%= render 'categorycard', icon: '🚕', title: 'Ride' %>
  <%= render 'categorycard', icon: '🚆', title: 'Public Commute' %>
  <%= render 'categorycard', icon: '🏠', title: 'Find Home ' %>
  <%= render 'categorycard', icon: '🛌', title: 'Book Stay' %>
  <%= render 'categorycard', icon: '💸', title: 'Banking' %>
</div>
